<div class="modal fade" id="editform" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="lable">Edit Products</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <form>
          <div class="form-group">
            <label for="barcode">Barcode</label>
            <input type="text" class="form-control" required="required" readonly="readonly" id="barcode" name="barcode">
          </div>
           <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" autocomplete="off" id="name" name="name">
          </div>
           <div class="form-group">
            <label for="ogPrice">OG Price</label>
            <input type="text" class="form-control" readonly="readonly" id="ogPrice" name="originalPrice">
          </div>
           <div class="form-group">
            <label for="slPrice">SL Price</label>
            <input type="number" class="form-control" id="slPrice" name="salePrice">
          </div>
           <div class="form-group">
            <label for="category">Category</label>
            <input type="text" class="form-control" readonly="readonly" id="category" name="category">
          </div>
           <div class="form-group">
            <label for="created">Created</label>
            <input type="datetime-local" class="form-control" readonly="readonly" id="created" name="dateCreated" value="2023-10-24T06:59">
          </div>
           <div class="form-group">
            <label for="quantity">Quantity</label>
            <input type="number" class="form-control" readonly="readonly" required="required" readonly="readonly"  id="quantity" name="qty">
          </div>
           <div class="form-group">
            <label for="sold">Sold</label>
            <input type="number" class="form-control" readonly="readonly" required="required" readonly="readonly"  id="sold" name="sold">
          </div>
        </form>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="editSpecticalItem" type="submit" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="delete" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="lable">Are you sure to delete this student?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p id="d-data"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
        <button type="button" class="btn btn-warning confirmedDeletedProduct">Yes</button>
      </div>
    </div>
  </div>
</div>